<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="net.kh.dao.QnaDao">

<!-- 글 리스트 -->
<select id="qnaList" resultType="qnaVO">
SELECT no,
	   subject,
	   writer,
	   content,
	   reg,
	   ref,
	   restep
FROM QNA ORDER BY reg DESC, restep ASC
	   
</select>

<!-- 글쓰기 -->
<insert id="qnaWrite" parameterType="qnaVO">
insert into QNA values(SEQ_QNA_NO.NEXTVAL, #{writer}, #{content}, sysdate, #{ref}, #{restep}, #{subject})
</insert>

<!--글 상세보기 -->
<select id="qnaView" resultType="qnaVO" parameterType="int">
select * from QNA where no = #{no}
</select>



</mapper>