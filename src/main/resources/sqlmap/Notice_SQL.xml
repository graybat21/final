<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 

<!-- 맵핑될 DAO 인터페이스의 Full name 을 줍니다. -->
<mapper namespace="net.kh.dao.NoticeDao">

	<!-- id 속성은 DAO 의 메소드와 같아야 한다. 여기의 boardVO 는 mybatis-confg.xml 에 Alias 되어 있습니다. -->
	<!-- 글목록  -->
	<select id="noticeList" resultType="noticeVO">
			SELECT * FROM NOTICE 
			ORDER BY no DESC
	</select>

	<!-- 글쓰기 -->
	<insert id="noticeWrite" parameterType="Integer">
			INSERT INTO NOTICE
			(NO, SUBJECT, CONTENT, REG, NAME)
			VALUES
			(SEQ_NOTICE_NO.NEXTVAL, #{subject}, #{content}, SYSDATE, #{name})
	</insert>

